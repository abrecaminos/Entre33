<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentDetalle"
    >




    <TextView
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texto Retrofit"
        android:textAllCaps="true"
        android:gravity="center_horizontal"
        android:textSize="40dp"
        android:id="@+id/textViewRetrofit"
        android:textColorHighlight="#f6f7fa"
        android:textColor="#6e0f6e"
        android:fontFamily="@font/shink"
        android:shadowColor="#fcf8f8"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artista: "
            android:gravity="bottom"
            android:textSize="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextoDatabase"
            android:gravity="center_horizontal"
            android:textSize="25dp"
            android:id="@+id/textViewDatabase"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageViewDetalle"
        android:layout_gravity="top"/>



</LinearLayout>